<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!--Màu nền -->
            <solid android:color="@color/colorAccent"></solid>
            <!-- độ rộng viền và màu -->
            <stroke android:width="0dp"
                    android:color="@android:color/white"></stroke>
            <!--chỗ nào set padding-->
            <padding android:bottom="5dp"
                     android:left="5dp"
                     android:right="5dp"
                     android:top="5dp"></padding>
            <!--<gradient-->
            <!--android:angle="90"-->
            <!--android:endColor="#00000000"-->
            <!--android:startColor="#000000" />-->
            <!-- chỗ này set độ cong góc -->
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item android:state_active="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <!--Màu nền -->
            <solid android:color="@color/dot_dark_screen2"></solid>
            <!-- độ rộng viền và màu -->
            <stroke android:width="0dp" android:color="@android:color/white"></stroke>
            <!--chỗ nào set padding-->
            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"></padding>
            <!--<gradient-->
            <!--android:angle="90"-->
            <!--android:endColor="#00000000"-->
            <!--android:startColor="#000000" />-->
            <!-- chỗ này set độ cong góc -->
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>